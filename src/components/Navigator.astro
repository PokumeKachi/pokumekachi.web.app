---
import logo from '../assets/logo.svg';

const buttons = [
  { text: "whoiam", },
  { text: "whatido", },
  { text: "whativedone", },
  { text: "more",  },
];
---

<div class="select-none fixed top-[var(--header-p-y)] right-[var(--header-p-x)]
    flex flex-row justify-end items-center gap-[var(--header-gap)]
    portrait:flex-col portrait:items-end portrait:gap-[var(--header-gap-portrait)]
    z-[9999]
    pointer-events-auto">
    {buttons.map(b => (
        <a
        href={'#' + b.text}
            class="
                text-[length:var(--header-text-medium)] font-[lexend] leading-none

                after:absolute after:left-0 after:-bottom-1
                after:h-[var(--header-button-underline)] after:w-full after:bg-current
                after:origin-left after:scale-x-0

                relative
                after:transition-transform after:duration-100
                hover:after:scale-x-100

                cursor-pointer
                active:scale-90
                active:opacity-50
                transition duration-250 ease-out
        ">
            {b.text}
        </a>
    ))}
</div>
