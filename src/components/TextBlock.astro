---
const { title } = Astro.props;
---
<section id={title} class="scroll-mt-[var(--block-p-y)] space-y-[10vh]">
    <div class="text-[length:var(--block-text-big)] font-[lexend]
        lowercase tracking-widest opacity-50 text-red-900
        text-center sticky top-[var(--block-p-y)] z-10
        portrait:top-[var(--block-p-y-portrait)]">
        {title}
    </div>
    <article class="prose prose-neutral
        prose-a:text-blue-700
        leading-tight text-[length:var(--block-text-medium)] font-['Roboto_Mono']">
        <slot/>
    </article>
</section>

<style>
    .prose table {
        margin-left: auto;
        margin-right: auto;
    }
</style>
